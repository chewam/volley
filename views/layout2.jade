doctype 5
html(ng-app="test")
    head
        title= title
        link(rel="stylesheet", href="/stylesheets/bootstrap.min.css")
        link(rel="stylesheet", href="/stylesheets/test/style.css")

    body
        block content

        div#modal.modal.hide.fade(tabindex="-1", role="dialog", aria-labelledby="modalLabel", aria-hidden="true")
            div.modal-header
                button.close(type="button", data-dismiss="modal", aria-hidden="true") ×
                h3#modalLabel Diagram image
                div Right click on the image below and then click on "Save as..." to save this diagram.
            div.modal-body
                img
            div.modal-footer

        div#permalink-modal.modal.hide.fade(tabindex="-1", role="dialog", aria-hidden="true")
            div.modal-header
                button.close(type="button", data-dismiss="modal", aria-hidden="true") ×
                h3 Phase permalink
                div This is a permanent link to the current phase, in its current state.
                div 
            div.modal-body
                a
            div.modal-footer

        canvas(id="canvas", style="display:none")

        script(type="text/javascript", src="/javascripts/test/jquery.min.js")
        script(type="text/javascript", src="/javascripts/test/bootstrap-transition.js")
        script(type="text/javascript", src="/javascripts/test/bootstrap-modal.js")
        script(type="text/javascript", src="/javascripts/test/rgbcolor.js")
        script(type="text/javascript", src="/javascripts/test/canvg.js")
        script(type="text/javascript", src="/javascripts/test/raphael.js")
        script(type="text/javascript", src="/javascripts/test/player.js")
        script(type="text/javascript", src="/javascripts/test/team.js")
        script(type="text/javascript", src="/javascripts/test/ground.js")
        script(type="text/javascript", src="/javascripts/test/angular.js")
        script(type="text/javascript", src="/javascripts/test/utils.js")
        script(type="text/javascript", src="/javascripts/test/app.js")
        script(type="text/javascript", src="/javascripts/test/controllers.js")
